<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.email %></td>
        <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Show', student %></button></td>
        <td><button type="button" class="btn btn-outline-secondary"><%= link_to 'Edit', edit_student_path(student) %></button></td>
        <td><button type="button" class="btn btn-outline-success"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-outline-info"><%= link_to 'New Student', new_student_path %></button>
